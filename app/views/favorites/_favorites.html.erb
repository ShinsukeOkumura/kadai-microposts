<ul class="media-list">
	<li class="media">
		<div class="media-left">
			<% favorites.each do |favorite| %>
				<li class="media">
					<div class="media-left">
						<img class="media-object img-rounded" src="<%= gravatar_url(favorite.user, { size: 50 }) %>" alt="">
					</div>
					<div class="media-body">
						<div>
							<%= link_to favorite.user.name, likes_user_path(favorite.user) %> <span class="text-muted">posted at <%= favorite.created_at %></span>
						</div>
						<div>
							<p><%= favorite.content %></p>
						</div>
					</div>
				</li>
			<% end %>
		</div>
	</li>
</ul>

